#include <iostream>
#include <cmath>
using namespace std;

double discriminante(int a ,int b,int c);
double unica(int a,int b);
void R_reales(int a ,int b,int c,double &x1,double &x2);
void imaginario(int a ,int b ,double d,double &real,double &imag);

int main (){
    
    double d;
    int a,b,c;
    double x1, x2;
    
    cout<<"Ingrese a: ";
    cin>>a;
    cout<<"Ingrese b: ";
    cin>>b;
    cout<<"Ingrese c: ";
    cin>>c;

    if(a == 0){
        cout << "No es una ecuacion cuadratica.";
        return 0;
    }

    d = discriminante(a, b, c);

    if(d == 0){
        double un = unica(a, b);
        cout << "La solucion es unica: " << un; 
    } 
    else if (d > 0){
        R_reales(a,b,c,x1,x2);
        cout << "Soluciones reales:\n";
        cout << "x1: " << x1 << endl;
        cout << "x2: " << x2 << endl;
    } 
    else {
        imaginario(a,b,d,x1,x2);
        cout << "Soluciones imaginarias:\n";
        cout << "x1: " << x1 <<" + " << x2 <<"i"<< endl;
        cout << "x2: " << x1 <<" - " << x2 <<"i"<< endl;
    }
    
    return 0;
}

double discriminante(int a ,int b,int c){
    return b*b - 4.0*a*c;
}

double unica(int a,int b){
    return -b/(2.0*a);
}

void R_reales(int a ,int b,int c,double &x1,double &x2){
    double d = discriminante(a,b,c);
    x1 = (-b + sqrt(d))/(2.0*a);
    x2 = (-b - sqrt(d))/(2.0*a);
}

void imaginario(int a ,int b ,double d,double &real,double &imag){
    real = -b/(2.0*a);
    imag = sqrt(-d)/(2.0*a);
}

void imaginario(int a ,int b ,double d,double &real,double &imag){
    real = -b/(2.0*a);
    imag = sqrt(-d)/(2.0*a);
}
